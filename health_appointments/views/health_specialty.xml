<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <data>

        <record id="health_specialty_tree_view" model="ir.ui.view">
            <field name="model">health.specialty</field>
            <field name="arch" type="xml">
                <tree string="Health Specialty" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="action_health_specialty" model="ir.actions.act_window">
            <field name="name">Health Specialty</field>
            <field name="res_model">health.specialty</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="health_specialty_tree_view"/>
        </record>

        <menuitem
                id="menu_health_appointments_main"
                name="Health Appointments"
                sequence="2"
                groups="group_health_manager"
        />

            <menuitem
                    id="menu_health_doctors"
                    name="Doctors"
                    sequence="0"
                    parent="menu_health_appointments_main"
                    groups="group_health_manager"
            />

            <menuitem
                    id="menu_health_specialty"
                    name="Doctor's Specialties"
                    sequence="0"
                    parent="menu_health_doctors"
                    action="action_health_specialty"
                    groups="group_health_manager"
            />

    </data>

</odoo>